@model List<ResultFooterAddressDto>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#btn1').click(function () {
                swal("Şartlar & Koşullar", "Araç kiralama işlemleriyle ilgili tüm koşullarına rezervasyonun fiziki olarak gerçekleştirileceği noktalarda bulunan Anlaşma Dökümanlarından ulaşabilirsiniz.");
            });
            $('#btn2').click(function () {
            swal("Güvenlik", "Sec BiAraç sitemiz AspNet Core teknolojisinde Sha256 şifreleme tekniği ile verilerinizin tamamen şifreli olarak tutulduğu bir altyapıya sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptıkları kart bilgileri sistemimizde kesinlikle saklanılmamaktadır.TC. Kimlik numarası, Mail adresi ve Telefon numarası gibi bilgileri ise şifrelenerek tutulmaktadır.");
            });
            $('#btn3').click(function () {
            swal("Çerez Politikası", "Sizlere daha iyi hizmet sunmak adına Web tarayıcılarınızın çerezlerini kullanmaktayız.");
            });
            $('#btn4').click(function () {
            swal("Sıkça Sorulan Sorular", "Sistemle ilgili sıkça sorulan sorular yer alır");
            });
            $('#btn5').click(function () {
            swal("Ödeme Yöntemleri", "Ödeme işlemleri sadece fiziki olarak ilgili lokasyonda ve kredi kartı ile yapılmaktadır.");
            });
            $('#btn6').click(function () {
            swal("Nasıl Çalışır", "1. adım Aracınızı kiralayın. \n 2. adım Mailinizi kontrol edin. \n 3. adım Ofislerimizden size en yakın konumdakine gelin");
            });
        });
       
    </script>
@foreach(var item in Model)
{
