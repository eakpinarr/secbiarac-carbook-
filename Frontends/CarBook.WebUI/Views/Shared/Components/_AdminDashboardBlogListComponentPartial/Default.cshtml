@model List<ResultAllBlogWithAuthorDto>


<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h2 class="card-title">Bloglar</h2>
            <p class="card-subtitle mb-4 font-size-13">
                Bloglar ve Yazarları
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>Blog Başlığı</th>
                        <th>Yazar</th>
                        <th>Bloğu Aç</th>
                    </tr>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@item.title</h5></td>
                                <td><h5 class="font-size-17 mb-1 font-weight-normal">@item.authorName</h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal"><button class="btn btn-info">Bloğu Aç</button></h5></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>