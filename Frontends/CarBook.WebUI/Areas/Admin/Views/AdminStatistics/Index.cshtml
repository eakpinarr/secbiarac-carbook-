                                <h2 class="d-flex align-items-center text-white mb-0">
                                    @ViewBag.BrandNameByMaxCar
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end col entity oluşturulacak-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-warning border-warning">
                    <div class="card-body">
                        <div class="mb-4">
                            <span class="badge badge-soft-light float-right">En Fazla Yorum Alan Blog</span>
                            <h5 class="card-title mb-0 text-white">En İyi Blog</h5>
                        </div>
                        <div class="row d-flex align-items-center mb-4">
                            <div class="col-8">
                                <h2 class="d-flex align-items-center text-white mb-0">
                                    @ViewBag.BlogTitleByMaxBlogComment
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end col entity oluşturulacak-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-info border-info">
                    <div class="card-body">
                        <div class="mb-4">
                            <span class="badge badge-soft-light float-right">Araç Sayısı</span>
                            <h5 class="card-title mb-0 text-white">1000 Km'den Az Araç Sayısı</h5>
                        </div>
                        <div class="row d-flex align-items-center mb-4">
