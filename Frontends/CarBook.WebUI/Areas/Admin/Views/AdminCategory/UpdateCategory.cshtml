@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Kategori Güncelleme Sayfası </h4>
                        <p class="card-subtitle mb-4">Kategori Alanında Veri Güncellmesini Aşağıdaki Panelden Yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <label for="exampleInputName">KAtegori Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Kategori Adını Giriniz Giriniz...">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Kategoriyi Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

