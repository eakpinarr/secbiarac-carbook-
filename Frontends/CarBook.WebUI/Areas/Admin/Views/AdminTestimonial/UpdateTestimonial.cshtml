@model CarBook.DTO.TestimonialDtos.UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Sayfası Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Yeni Referans işleminin yapıldığı sayfadaki bilgileri asağıdan düzenleyebilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Adını ve Soyadını Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Ünvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referans Unvanını Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageURL">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageURL" asp-for="ImageURL" placeholder="Görsel Seçiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageURL">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumunuzu buraya yapabilirsiniz."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>