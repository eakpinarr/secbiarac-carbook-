@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımda Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Hakkımda Alanına Veri Girişi Aşağıdaki Panelden Yapabilirsiniz. Tasarımda bozulma olmaması adına, yeni bir Hakkımda girişi yaptıktan sonra önceki Hakkımda alanını silin. Sadece bir tane Hakkımda verisi kalmalıdır.</p>
                        <form method="post">
                            <input type="hidden" asp-for="aboutID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="description" placeholder="Açıklamayı Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl" placeholder="Hakkımda Kapak Fotoğrafı Linkini Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımda Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



